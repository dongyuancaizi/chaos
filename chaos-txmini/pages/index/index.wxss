/**index.wxss**/
page {
  background-color: #fff;
}

.weui {}

.weui_bottom {
  position: fixed;
  bottom: 0px;
  width: 100%;
  display: flex;
  padding: 15px 0px;
  background-color: #fd6b6c;
  z-index: 4;
  align-items: center;
  border-top: 1px #eee solid;
}

.weui_bottom_l {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.weui_bottom_l image {
  height: 20px;
  width: 20px;
  display: flex;
}

.weui_bottom_r {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1px #fff solid;
}

.weui_bottom_r image {
  height: 20px;
  width: 20px;
  display: flex;
}

.weui_bottom_b {
  margin-left: 5px;
  font-size: 16px;
  color: #fff;
  font-weight: bold;
}


.weui_top {
  width: 90%;
  margin: 50px auto 24px;
  text-align: center;
}

.weui_top_l {
  display: flex;
  background-color: #f8f8f8;
  padding: 12px 10px;
  border: 1px #eee solid;
  align-items: center;
  border-radius: 20px;
  margin-top: 24px;
  justify-content: space-between;
}

.weui_top_l image {
  height: 16px;
  width: 16px;
}

.weui_top_l_info {
  font-size: 15px;
  color: #777;
  margin-left: 7px;
}

.weui_content {
  background-color: #fff;
  width: 90%;
  margin: 0px auto;
  border: 0.5px #e0e0e0 solid;
  border-radius: 5px;
  border-collapse: collapse;
}

.weui_content_one {
  padding: 13px 10px;
  border-bottom: 0.5px #e0e0e0 solid;
  font-size: 14px;
  margin: 0px auto;
  width: 85%;
  color: #808080;
}

.content_top {
  display: flex;
  font-size: 15px;
  color: #333;
  padding: 10px 15px;
}

.content_top_l {
  flex: 1;
}

.content_top_r {
  display: flex;
  align-items: center;
}

.content_top_r image {
  width: 20px;
  height: 20px;
}

.top_r_r {
  color: #555;
  margin-left: 7px;
}

.content_body {
  display: flex;
  white-space: nowrap;
  padding: 0px 15px 15px;
}

.weui_body_block {
  width: 300px;
  background-color: #fff;
  padding-bottom: 20px;
  border-radius: 4px;
  margin-right: 20px;
  box-shadow: 5px 5px 5px #eee;
}

.body_block_img {
  width: 300px;
  height: 200px;
}

.body_block_top {
  display: flex;
  padding: 10px;
}

.block_top_name {
  flex: 1;
  font-size: 16px;
  color: #333;
}

.block_top_desc {
  font-size: 14px;
  color: #999;
}

.body_block_bottom {
  font-size: 15px;
  color: #999;
  padding: 0px 10px;
}

.scroll-view {
  width: 100%;
}

.weui_top_b {
  text-align: center;
  font-size: 14px;
  color: #999;
  margin-top: 15px;
  text-decoration: underline;
}

.weui_logo {
  width: 60px;
  height: 60px;
}

.content_one_hover {
  background-color: #f8f8f8;
}